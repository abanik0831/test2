<p class='well'>
	<span class="capitalize">
		<% if current_user == activity.owner %>
		   	 <%= link_to "you are ", current_user %>
		<% else %>
		   	<%= link_to activity.owner.username , activity.owner %> 
		<% end %>
	</span>
		unfollowing
		<%# binding.pry %>
	<% pf = Profile.find_by_id(activity.parameters[:followed_id]) %> 
	<span class="capitalize">
		<% if pf.user == current_user %>
			<%= link_to "you" , current_user  %>
		<% else %> 
			<%= link_to pf.try(:f_name) , pf  %>
		<% end %>
	</span>
	 &nbsp;&nbsp;&nbsp; &nbsp;
	<span class="activity_time"><%= time_ago_in_words(activity.created_at) %></span>

</p>
