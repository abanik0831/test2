<h1>Listing profile_pics</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @profile_pics.each do |profile_pic| %>
      <tr>
        <td><%= profile_pic.image %></td>
        <td><%= link_to 'Show', profile_pic %></td>
        <td><%= link_to 'Edit', edit_profile_pic_path(profile_pic) %></td>
        <td><%= link_to 'Destroy', profile_pic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

