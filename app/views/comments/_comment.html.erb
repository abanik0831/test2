<%= div_for comment, data: {id: comment.id} do %>
    <% Post.all.each do |f| %>
        <% if comment.post_id == f.id %>
            <% ProfilePic.all.each do |cmtpict| %>
                <% if comment.profile_id == cmtpict.id && !cmtpict.image.blank? %>
                    <li>
                      <%= comment.id %>
                      <%= image_tag cmtpict.image_url(:thumb).to_s, :class => "comment_profilepic" %>
                    </li>
                <% end %>
            <% end %>
            <%= simple_format comment.cmtpost %>
        <% end %>
    <% end %>
<% end %>