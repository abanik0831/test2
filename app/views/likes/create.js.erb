<% if @post.likes.count <= 3 %>
    $("#like_pf_pic_"+ <%= @post.id.to_s %>).html("<%=j render @post.likes.order('created_at DESC') %>");
<% else %>
    $("#like_pf_pic_"+ <%= @post.id.to_s %>).html("<%=j render @post.likes.order('created_at DESC').limit(3) %>");
<% end %>

$("#post_likes_form_<%= @post.id %>").html("<%= j(render(:partial => 'postlikes', :locals=>{:post => @post, :like => @like})) %>")
$("#count_post_likes_<%= @post.id %>").html("<%= j(render(:partial => 'likes/likecount', :locals=>{:post => @post, :like => @like})) %>")



