<h1>Listing profiles</h1>

<table>
  <thead>
    <tr>
      <th>F name</th>
      <th>L name</th>
      <th>Title</th>
      <th>Area</th>
      <th>Skills</th>
      <th>Fb url</th>
      <th>Linkedin url</th>
      <th>Meetup url</th>
      <th>Twitter url</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.f_name %></td>
        <td><%= profile.l_name %></td>
        <td><%= profile.title %></td>
        <td><%= profile.area %></td>
        <td><%= profile.skills %></td>
        <td><%= profile.fb_url %></td>
        <td><%= profile.linkedin_url %></td>
        <td><%= profile.meetup_url %></td>
        <td><%= profile.twitter_url %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
