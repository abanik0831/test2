<p id="notice"><%= notice %></p>

<p>
  <strong>Post:</strong>
  <%= @post.post %>
</p>

<p>
  <strong>Profile:</strong>
  <%= @post.profile_id %>
</p>

<%= content_tag :div, id: "comments", data: {url: post_comments_url(@post)} do %>
    <%= render @post.comments %>
<% end %>

<h3>New Post</h3>

<%= render 'comments/form' %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
